<h2>Resend confirmation instructions</h2>

<%= form_for(resource, as: resource_name, url: sms_confirmation_path(resource_name), html: {method: :post}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :phone %><br/>
    <%= f.text_field :phone, autofocus: true, value: (resource.pending_sms_reconfirmation? ? resource.unconfirmed_phone : resource.phone) %>
  </div>

  <div class="actions">
    <%= f.submit "Resend confirmation instructions" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>